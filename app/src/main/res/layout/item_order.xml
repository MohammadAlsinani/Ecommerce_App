<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:cardCornerRadius="18dp"
android:layout_marginBottom="5dp"
app:cardElevation="4dp"
>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="3dp">

    <ImageView
        android:id="@+id/order_item_image"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/your_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/order_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/order_item_image"
        android:layout_centerVertical="true"
        android:text="Item Title" />

    <TextView
        android:id="@+id/order_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/order_item_image"
        android:layout_marginTop="4dp"
        android:text="Item Price" />
    <TextView
        android:id="@+id/order_item_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/order_item_image"
        android:layout_marginTop="4dp"
        android:text="Item Price" />

    <TextView
    android:id="@+id/item_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_below="@+id/order_item_image"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"

        android:text="Order Status" />

</RelativeLayout>
</androidx.cardview.widget.CardView>


